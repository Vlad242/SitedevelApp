{% extends '@App/base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row">
                    {% for serial in serials %}
                        <div class="col-md-4">
                            <div class="card mb-4 box-shadow">
                                <img class="card-img-top" src="{{ asset('uploads/files/' ~ serial.imagePath) }}" alt="{{ serial.name }}">
                                <div class="card-body">
                                    <h5>{{ serial.name }}</h5>
                                    <hr>
                                    <p class="card-text">{{ serial.description }}</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Сезони</button>
                                        </div>
                                        <small class="text-muted">{{ serial.createdAt| date('Y:m:d') }}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
